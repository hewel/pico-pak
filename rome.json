{
  "$schema": "./node_modules/rome/configuration_schema.json",
  "linter": {
    "ignore": ["./gql/*.ts"],
    "enabled": true,
    "rules": {
      "recommended": true,
      "a11y": {
        "useKeyWithClickEvents": "off"
      },
      "suspicious": {
        "noExplicitAny": "off"
      }
    }
  },
  "formatter": {
    "lineWidth": 100
  },
  "files": {
    "ignore": ["./gql/*.ts"]
  }
}
